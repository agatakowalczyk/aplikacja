<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#86DFFF"
    tools:context=".FarmaActivity">

    <TextView
        android:id="@+id/farmaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="500dp"
        android:text="FARMA"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textSize="72sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/Tło2"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginBottom="96dp"
        android:background="#287177"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/farmaid"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/farm_1"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/farm6"
        app:layout_constraintStart_toStartOf="@+id/Tło2"
        app:layout_constraintTop_toTopOf="@+id/Tło2" />

    <ImageButton
        android:id="@+id/farm_2"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/farm7"
        app:layout_constraintStart_toEndOf="@+id/farm_1"
        app:layout_constraintTop_toTopOf="@+id/Tło2" />

    <ImageButton
        android:id="@+id/farm_3"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/farm8"
        app:layout_constraintEnd_toEndOf="@+id/Tło2"
        app:layout_constraintStart_toEndOf="@+id/farm_2"
        app:layout_constraintTop_toTopOf="@+id/Tło2" />

    <ImageButton
        android:id="@+id/farm_4"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/farm2"
        app:layout_constraintStart_toStartOf="@+id/Tło2"
        app:layout_constraintTop_toBottomOf="@+id/farm_1" />

    <ImageButton
        android:id="@+id/farm_5"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/farm4"
        app:layout_constraintStart_toEndOf="@+id/farm_4"
        app:layout_constraintTop_toBottomOf="@+id/farm_2" />

    <ImageButton
        android:id="@+id/farm_6"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/farm1"
        app:layout_constraintBottom_toBottomOf="@+id/Tło2"
        app:layout_constraintEnd_toEndOf="@+id/Tło2"
        app:layout_constraintStart_toEndOf="@+id/farm_7"
        app:layout_constraintTop_toBottomOf="@+id/farm_8" />

    <ImageButton
        android:id="@+id/farm_7"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/farm3"
        app:layout_constraintBottom_toBottomOf="@+id/Tło2"
        app:layout_constraintStart_toEndOf="@+id/farm_9"
        app:layout_constraintTop_toBottomOf="@+id/farm_5" />

    <ImageButton
        android:id="@+id/farm_8"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/farm5"
        app:layout_constraintEnd_toEndOf="@+id/Tło2"
        app:layout_constraintStart_toEndOf="@+id/farm_5"
        app:layout_constraintTop_toBottomOf="@+id/farm_3" />

    <ImageButton
        android:id="@+id/farm_9"
        style="@android:style/Widget.Holo.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/farm9"
        app:layout_constraintBottom_toBottomOf="@+id/Tło2"
        app:layout_constraintStart_toStartOf="@+id/Tło2"
        app:layout_constraintTop_toBottomOf="@+id/farm_4"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/farma_tekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Jakie zwierzę słyszysz?"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Tło2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/farmaid" />

    <ImageButton
        android:id="@+id/odtwarzaj4"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#FFFFFF"
        android:scaleType="fitCenter"
        app:tint="#287177"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tło2"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/powrot4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:tintMode="src_over"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>